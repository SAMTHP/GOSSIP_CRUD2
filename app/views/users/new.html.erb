<%= form_for @user do |f| %>
  <div class="form-group">
    <label>Nom :</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Email :</label>
      <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Password :</label>
      <%= f.text_field :password, class: 'form-control' %>
  </div>
  <%= f.submit "Enregistrement", class:"btn btn-primary" %>
<% end %>